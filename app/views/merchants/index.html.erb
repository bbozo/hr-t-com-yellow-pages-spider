<h1>Listing merchants</h1>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Street</th>
    <th>Location link</th>
    <th>Telephone number</th>
    <th>Additional data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @merchants.each do |merchant| %>
  <tr>
    <td><%= merchant.name %></td>
    <td><%= merchant.city %></td>
    <td><%= merchant.street %></td>
    <td><%= merchant.location_link %></td>
    <td><%= merchant.telephone_number %></td>
    <td><%= merchant.additional_data %></td>
    <td><%= link_to 'Show', merchant %></td>
    <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
    <td><%= link_to 'Destroy', merchant, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

